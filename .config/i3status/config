# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ÃŸ
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        interval = 5
}

order += "disk /"
order += "path_exists VPN"
order += "wireless _first_"
order += "ethernet _first_"
order += "battery all"
order += "tztime local"

# https://faq.i3wm.org/question/1090/how-to-test-networkmanageropenvpn-status-with-i3statusconf.1.html
path_exists VPN {
     # path exists when a VPN tunnel launched by nmcli/nm-applet is active
     path = "/proc/sys/net/ipv4/conf/tun0"
     format = "VPN"
}

wireless _first_ {
    format_up = "Wifi: %ip"
    format_down = "Wifi"
}

ethernet _first_ {
    # if you use %speed, i3status requires root privileges
    format_up = "Ethernet: %ip"
    format_down = "Ethernet: down"
}

battery all {
    last_full_capacity = true # 100% = highest capacity battery can currently be
    format = "%status %percentage %remaining"
    format_down = "No battery"
    status_chr = "âš¡ Charging"
    status_bat = "ðŸ”‹ Battery"
    status_unk = "? UNK"
    status_full = "â˜» FULL"
    path = "/sys/class/power_supply/BAT%d/uevent"
    threshold_type = time
    low_threshold = 30
}

tztime local {
    format = "%Y-%m-%d %H:%M:%S"
}

disk "/" {
    format = "%avail"
}

